{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "text",
      "maxLength": 10000
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "maxLength": 10000
    },
    "short_description": {
      "type": "text",
      "maxLength": 100000
    },
    "long_description": {
      "type": "blocks"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "gallery": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "catalog_pdf": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "product"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "accessories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "spares": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product.product"
    },
    "specification": {
      "type": "component",
      "component": "specifications.specification",
      "repeatable": true
    },
    "model_number": {
      "type": "text",
      "maxLength": 1000
    }
  }
}
